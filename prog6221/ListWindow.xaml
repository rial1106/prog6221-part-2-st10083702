<Window x:Class="prog6221.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prog6221"
        mc:Ignorable="d"
        Title="List Of Recipes" Height="600" Width="900">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label FontSize="33" Grid.Column="0" HorizontalAlignment="Center">Recipes</Label>

        <ListBox FontSize="24" x:Name="LstRecipes" Grid.Row="1" SelectionChanged="OnSelected"/>
    </Grid>
</Window>
